{
  "name": "shieldai",
  "version": "1.0.0",
  "description": "AI-Powered Security Auditor & Fixer for Docker Infrastructure",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:client\" \"pnpm:dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx watch --clear-screen=false src/server/index.ts",
    "build": "pnpm build:client && pnpm build:server",
    "build:client": "tsc -b tsconfig.client.json && vite build",
    "build:server": "tsc -b tsconfig.server.json",
    "start": "node dist/server/server/index.js",
    "preview": "vite preview",
    "lint": "eslint src",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.0.2",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.62.7",
    "@types/glob": "^9.0.0",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cron": "^3.1.7",
    "diff": "^7.0.0",
    "dockerode": "^4.0.2",
    "fastify": "^5.2.0",
    "glob": "^13.0.3",
    "lucide-react": "^0.564.0",
    "radix-ui": "^1.4.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "recharts": "^2.15.1",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.5.5",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0-beta.8",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cron": "^2.4.0",
    "@types/diff": "^6.0.0",
    "@types/dockerode": "^3.3.34",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "concurrently": "^9.1.2",
    "pino-pretty": "^13.1.3",
    "tailwindcss": "^4.0.0-beta.8",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.7"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
